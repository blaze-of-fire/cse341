{
  "swagger": "2.0",
  "info": {
    "title": "Animals and Furniture API",
    "description": "This API gives CRUD access to animal and furniture records.",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http", "https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Hello World"],
        "summary": "Root endpoint",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    },
    "/animals": {
      "get": {
        "tags": ["Animals"],
        "summary": "List all animals",
        "responses": {
          "200": {
            "description": "An array of animals",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Animal" }
            }
          },
          "400": { "description": "Bad Request – database error" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Animals"],
        "summary": "Create a new animal",
        "parameters": [
          {
            "in": "body",
            "name": "animal",
            "required": true,
            "schema": { "$ref": "#/definitions/Animal" }
          }
        ],
        "responses": {
          "201": {
            "description": "Animal created",
            "schema": { "$ref": "#/definitions/Animal" }
          },
          "400": { "description": "Bad Request – missing commonName" },
          "412": {
            "description": "Validation failed",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/animals/{id}": {
      "get": {
        "tags": ["Animals"],
        "summary": "Get an animal by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": {
            "description": "The requested animal",
            "schema": { "$ref": "#/definitions/Animal" }
          },
          "400": {
            "description": "Bad Request – invalid ID format",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Animals"],
        "summary": "Update an animal by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "description": "MongoDB ObjectId"
          },
          {
            "in": "body",
            "name": "animal",
            "required": true,
            "schema": { "$ref": "#/definitions/Animal" }
          }
        ],
        "responses": {
          "200": {
            "description": "Animal updated successfully",
            "schema": { "$ref": "#/definitions/Animal" }
          },
          "400": { "description": "Bad Request – invalid ID or empty body" },
          "404": { "description": "Not Found" },
          "412": {
            "description": "Validation failed",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Animals"],
        "summary": "Delete an animal by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": { "description": "Animal deleted successfully" },
          "400": {
            "description": "Bad Request – invalid ID format",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/furniture": {
      "get": {
        "tags": ["Furniture"],
        "summary": "List all furniture",
        "responses": {
          "200": {
            "description": "An array of furniture items",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Furniture" }
            }
          },
          "400": { "description": "Bad Request – database error" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "tags": ["Furniture"],
        "summary": "Create a new furniture item",
        "parameters": [
          {
            "in": "body",
            "name": "furniture",
            "required": true,
            "schema": { "$ref": "#/definitions/Furniture" }
          }
        ],
        "responses": {
          "201": {
            "description": "Furniture created",
            "schema": { "$ref": "#/definitions/Furniture" }
          },
          "400": { "description": "Bad Request – missing name" },
          "412": {
            "description": "Validation failed",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/furniture/{id}": {
      "get": {
        "tags": ["Furniture"],
        "summary": "Get a furniture item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": {
            "description": "The requested furniture item",
            "schema": { "$ref": "#/definitions/Furniture" }
          },
          "400": {
            "description": "Bad Request – invalid ID format",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "tags": ["Furniture"],
        "summary": "Update a furniture item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "description": "MongoDB ObjectId"
          },
          {
            "in": "body",
            "name": "furniture",
            "required": true,
            "schema": { "$ref": "#/definitions/Furniture" }
          }
        ],
        "responses": {
          "200": {
            "description": "Furniture updated successfully",
            "schema": { "$ref": "#/definitions/Furniture" }
          },
          "400": { "description": "Bad Request – invalid ID or empty body" },
          "404": { "description": "Not Found" },
          "412": {
            "description": "Validation failed",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "tags": ["Furniture"],
        "summary": "Delete a furniture item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "pattern": "^[a-fA-F0-9]{24}$",
            "description": "MongoDB ObjectId"
          }
        ],
        "responses": {
          "200": { "description": "Furniture deleted successfully" },
          "400": {
            "description": "Bad Request – invalid ID format",
            "schema": { "$ref": "#/definitions/ValidationError" }
          },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  },
  "definitions": {
    "Animal": {
      "type": "object",
      "required": [
        "animalType",
        "color",
        "commonName",
        "habitat",
        "mainFoodSource",
        "scientificName"
      ],
      "properties": {
        "animalType": { "type": "string" },
        "color": { "type": "string" },
        "commonName": { "type": "string" },
        "coolFact": { "type": "string" },
        "habitat": { "type": "string" },
        "mainFoodSource": { "type": "string" },
        "scientificName": { "type": "string" }
      }
    },
    "Furniture": {
      "type": "object",
      "required": ["name", "color", "roomPlacement"],
      "properties": {
        "name": { "type": "string" },
        "color": { "type": "string" },
        "description": { "type": "string" },
        "priceRange": { "type": "string" },
        "estimatedAge": { "type": "string" },
        "roomPlacement": { "type": "string" },
        "pickupLocation": { "type": "string" }
      }
    },
    "ValidationError": {
      "type": "object",
      "properties": {
        "success": { "type": "boolean" },
        "message": { "type": "string" },
        "data": { "type": "object" }
      }
    }
  }
}